        android:scaleType="centerCrop"
        android:src="@drawable/img_profile"
        android:layout_marginTop="24dp"
        app:riv_oval="true"
        android:layout_gravity="center"
        app:riv_border_color="@color/brown"
        app:riv_border_width="2dp"/>
