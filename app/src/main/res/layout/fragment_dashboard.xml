<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="35dp"
        android:fontFamily="@font/righteous_regular"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvPercentageGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have walked 0% of today's goal."
        android:fontFamily="@font/roboto_medium"
        android:textSize="18dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvUserName" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBarSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPercentageGoal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:indicatorColor="@color/brown"
        app:trackColor="@color/brown_40transparency"
        app:trackThickness="16dp"
        app:indicatorSize="160dp"
        android:progress="80"
        app:trackCornerRadius="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:indeterminateBehavior="cycle"
        />
        />
    <TextView
        android:id="@+id/tvDailySteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/progressBarSteps"
        app:layout_constraintBottom_toBottomOf="@id/progressBarSteps"
        android:text="0/10.000 steps"
        app:layout_constraintLeft_toLeftOf="@id/progressBarSteps"
        app:layout_constraintRight_toRightOf="@id/progressBarSteps"/>
    <TextView
        android:id="@+id/tvAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accelerometer data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/vTargetCalories"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/progressBarSteps"
        android:background="@drawable/bg_target_cals"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vBMR"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/tVTargetCaloriesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/vTargetCalories"
        app:layout_constraintLeft_toLeftOf="@id/vTargetCalories"
        android:text="Target Calories"
        android:layout_margin="10dp"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_medium"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1400"
        app:layout_constraintLeft_toLeftOf="@id/vTargetCalories"
        app:layout_constraintTop_toBottomOf = "@id/tVTargetCaloriesText"
        android:layout_margin = "10dp"
        />

    <View
        android:id="@+id/vBMR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vTargetCalories"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_bmr"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vTargetCalories"
        />


</androidx.constraintlayout.widget.ConstraintLayout>